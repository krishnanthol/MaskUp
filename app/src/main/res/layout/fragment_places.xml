<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_drawable">

    <TextView
        android:id="@+id/textView3"
        style="@style/DidactGothicTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="Places"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/id_placesListView"
        android:layout_width="355dp"
        android:layout_height="525dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/id_addPlaceButton"
        color="@drawable/background_gradient_drawable"
        android:layout_width="52dp"
        android:layout_height="49dp"
        android:layout_marginStart="246dp"
        android:layout_marginTop="16dp"
        android:text="+"
        android:textStyle="bold"
        style="@style/DidactGothicTextViewStyle"
        app:cornerRadius="28dp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_goHome"
        android:layout_width="189dp"
        android:layout_height="72dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_gradient_drawable"
        android:text="Enter"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_placesListView" />

</androidx.constraintlayout.widget.ConstraintLayout>